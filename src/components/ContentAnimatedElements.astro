---
// コンテンツページ専用アニメーション要素（月アイコン、中央スラッシュ｜、コンテンツ名）
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  contentName?: string;
}

const {
  contentName = ""
} = Astro.props;
---

<!-- 月アイコン -->
<ThemeToggle position="content" />

<!-- 中央スラッシュ（コンテンツ用の｜） -->
<div class="content-slash" id="contentSlash">
  <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M50 20 L50 80" stroke="#272727" stroke-width="0.8" stroke-linecap="square"/>
  </svg>
</div>

<!-- コンテンツ名 -->
<div class="content-name-wrapper">
  <span class="content-name" id="contentName">{contentName}</span>
</div>

<style>
  /* 中央スラッシュ */
  .content-slash {
    position: absolute;
    left: 50vw;
    top: 50vh;
    transform: translate(-50%, -50%);
    z-index: 1;
    transform-origin: center;
    view-transition-name: central-slash;
  }

  /* コンテンツ名 */
  .content-name-wrapper {
    position: absolute;
    left: 25vw;
    top: 50vh;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    z-index: 5;
    view-transition-name: content-name;
  }

  .content-name {
    font-size: 1.5rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    cursor: url('/book-cursor.png'), pointer;
  }

  .content-name:hover {
    color: #888;
  }

  /* ダークモード対応 */
  body.dark .content-slash svg path {
    stroke: #fff;
  }

  body.dark .content-name {
    color: #eee;
  }
</style>
