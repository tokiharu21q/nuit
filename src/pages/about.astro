---
// このサイトについてコンテンツ画面
import CommonHead from '../components/CommonHead.astro';
import GlobalStyles from '../components/GlobalStyles.astro';
import ScrollbarStyles from '../components/ScrollbarStyles.astro';
import CustomCursor from '../components/CustomCursor.astro';
import AboutMarkdown from '../content/about.md';
import NavigationElements from '../components/NavigationElements.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<html lang="ja">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="view-transition" content="same-origin" />
    <CommonHead title="aonisum/about" description="このサイトについての情報" />
    <GlobalStyles />
    <ScrollbarStyles />
    <CustomCursor />
</head>
<body>
    <div class="content-root">
        <!-- 中央スラッシュ -->
        <div class="content-slash" id="contentSlash">
            <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 20 L0 70" stroke="#272727" stroke-width="0.8" stroke-linecap="square"/>
            </svg>
        </div>

        <!-- コンテンツタイトル -->
        <div class="content-title" id="contentTitle">aonisum</div>

        <!-- メニュー戻るボタン（リンク遷移でView Transition発火） -->
        <NavigationElements 
            showBackButton={true}
            backButtonUrl="/menu"
            backButtonLabel="メニューに戻る"
            showCopyright={true}
            copyrightText="aonisum©"
            copyrightUrl="/entrance"
        />
        
        <!-- 月アイコン -->
        <ThemeToggle position="content" />

        <!-- アイランド: コンテンツコンテナ -->
        <section class="content-island" id="aboutIsland">
            <header class="island-title" id="aboutIslandTitle"></header>
            <div class="island-content">
                <div class="about-body" id="aboutBody" style="opacity: 0;"><AboutMarkdown /></div>
                <div class="scrollbar-mask" aria-hidden="true"></div>
            </div>
            <!-- 右下操作要素は本画面では無し -->
        </section>
    </div>

    <script>
        import { initCustomScrollbars } from '../components/ScrollbarClient';
        // カスタムスクロールバー（スクロール時のみ表示）
        initCustomScrollbars();

        // メニュー状態保存処理
        document.addEventListener('astro:before-preparation', () => {
            // 現在のコンテンツ名を保存
            localStorage.setItem('currentContent', 'aonisum');
        });

        // CustomTransition終了後にAboutMarkdownをフェード効果で表示
        document.addEventListener('astro:page-load', () => {
            const aboutBody = document.getElementById('aboutBody');
            if (aboutBody) {
                // CustomTransitionの時間（1.8s）に合わせて遅延
                setTimeout(() => {
                    aboutBody.style.transition = 'opacity 0.8s ease-in-out';
                    aboutBody.style.opacity = '1';
                }, 100);
            }
        });
    </script>

    <style>
        html, body {
            height: 100%;
            line-height: 1.2;
            margin: 0;
            padding: 0;
            font-family: var(--font-primary);
            /* font-family: 'Noto Sans JP', sans-serif; */
            background: #fff;
            color: #222;
        }
        body {
            transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
        }

        .content-root {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
        }

        .content-slash {
            position: absolute;
            left: 50vw;
            top: 50vh;
            transform: translate(-50%, -50%);
            z-index: 1;
        }

        .content-title {
            position: absolute;
            left: 30vw;
            top: 50vh;
            transform: translate(-50%, -50%);
            font-size: 1.2rem;
            font-weight: 300;
            letter-spacing: 0.1em;
            color: #222;
            z-index: 5;
        }

        /* arrow-btn 仕様（menu.astroに準拠） */
        .arrow-btn {
            background: none;
            border: none;
            color: #444;
            /* cursor: url('/book-cursor.png'), pointer; */
            margin: 0.5rem 0;
            transition: color 0.2s;
        }
        .arrow-btn:hover {
            color: #888;
        }

        .back-btn {
            background: none;
            /* border: none; */
            /* cursor: url('/book-cursor.png'), pointer; */
            transition: color 0.2s;
        }
        .back-btn:hover svg path {
            stroke: #888;
        }

        /* ダークモード用 */
        body.dark {
            background: #1F222D;
            color: #fff;
        }

        body.dark .arrow-btn svg path {
            stroke: #eee;
        }
        body.dark .arrow-btn:hover svg path {
            stroke: #fff;
        }

        
        /* ===== アイランド（コンテンツコンテナ） ===== */
        .content-island {
            position: absolute;
            left: 55vw;
            top: 15vh;
            width: 35vw;   /* 80vw - 60vw */
            height: 65vh;  /* 80vh - 20vh */
            box-sizing: border-box;
            border: none;
            padding: 0; /* 内部で％指定を用いるため */
            overflow: hidden;
            z-index: 6;
            background: transparent;
        }
        .island-title {
            position: absolute;
            left: 5%;
            top: 5%;
            font-size: 1.5rem;
            letter-spacing: 0.1em;
        }
        .island-content {
            position: absolute;
            left: 5%;
            top: 15%;
            width: 90%;
            height: 80%;
            overflow: auto;
        }

        .about-body {
            line-height: 1.6;
            font-size: 0.95rem;
            font-weight: 300;
            white-space: pre-wrap;
            transition: opacity 0.8s ease-in-out;
        }

        .about-body h1,
        .about-body h2,
        .about-body h3,
        .about-body h4,
        .about-body h5,
        .about-body h6 {
            font-size: 1rem;
            font-weight: 300;
            line-height: 1.2;
            /* margin: 1rem 0 0.5rem 0; */
        }

        .about-body p {
            font-size: 1rem;
            font-weight: 300;
            line-height: 1.6;
            margin: 0.5rem 0;
        }


    /* スクロールバー関連は共通スタイルへ移行（ScrollbarStyles） */
        body.dark .content-island { border: none; }
        body.dark .island-title {
            color: #eee;
        }
        body.dark .about-body {
            color: #eee;
        }

        body.dark .content-slash svg path {
            stroke: #fff;
        }

        body.dark .content-title {
            color: #eee;
        }
        
    </style>
</body>
</html> 